<Window x:Class="DuctCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание воздуховода" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="15">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="120"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<!-- Тип воздуховода -->
		<TextBlock Grid.Row="0" Grid.Column="0" Text="Тип воздуховода:"
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
		<ComboBox Grid.Row="0" Grid.Column="1" Name="cmbDuctType"
                  Margin="0,0,0,10" Height="30"/>

		<!-- Базовый уровень -->
		<TextBlock Grid.Row="1" Grid.Column="0" Text="Базовый уровень:"
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
		<ComboBox Grid.Row="1" Grid.Column="1" Name="cmbLevel"
                  Margin="0,0,0,10" Height="30"/>

		<!-- Смещение -->
		<TextBlock Grid.Row="2" Grid.Column="0" Text="Отметка посередине:"
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
		<TextBox Grid.Row="2" Grid.Column="1" Name="txtOffset"
                 Margin="0,0,0,10" Height="25" Text="0.0"/>

		<!-- Высота и ширина -->
		<TextBlock Grid.Row="3" Grid.Column="0" Text="Высота:"
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
		<TextBox Grid.Row="3" Grid.Column="1" Name="txtHeight"
                 Margin="0,0,0,10" Height="25" Text="0.1"/>

		<TextBlock Grid.Row="4" Grid.Column="0" Text="Ширина:"
                   Margin="0,0,10,10" VerticalAlignment="Center"/>
		<TextBox Grid.Row="4" Grid.Column="1" Name="txtWidth"
                 Margin="0,0,0,10" Height="25" Text="0.1"/>

		<!-- Точка 1 -->
		<TextBlock Grid.Row="5" Grid.Column="0" Text="Точка 1:"
                   Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="Bold"/>
		<StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal"
                    Margin="0,0,0,10" HorizontalAlignment="Left">
			<TextBlock Text="X:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtX1" Width="70" Height="25" Text="0" Margin="0,0,10,0"/>
			<TextBlock Text="Y:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtY1" Width="70" Height="25" Text="0" Margin="0,0,10,0"/>
			<TextBlock Text="Z:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtZ1" Width="70" Height="25" Text="0"/>
		</StackPanel>

		<!-- Точка 2 -->
		<TextBlock Grid.Row="6" Grid.Column="0" Text="Точка 2:"
                   Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="Bold"/>
		<StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal"
                    Margin="0,0,0,10" HorizontalAlignment="Left">
			<TextBlock Text="X:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtX2" Width="70" Height="25" Text="5" Margin="0,0,10,0"/>
			<TextBlock Text="Y:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtY2" Width="70" Height="25" Text="0" Margin="0,0,10,0"/>
			<TextBlock Text="Z:" Margin="0,0,5,0" VerticalAlignment="Center"/>
			<TextBox Name="txtZ2" Width="70" Height="25" Text="0"/>
		</StackPanel>

		<!-- Кнопка выбора точек -->
		<Button Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2"
                Content="Выбрать точки в Revit"
                Name="btnPickPoints" Click="BtnPickPoints_Click"
                Margin="0,10,0,15" Height="35" Background="#FFE1E1E1"/>

		<!-- Сообщения -->
		<Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                BorderThickness="1" BorderBrush="Gray" Margin="0,0,0,10">
			<TextBlock Name="txtMessages" TextWrapping="Wrap"
                       Margin="5" Text="Введите параметры воздуховода. Все значения в единицах проекта Revit."
                       Foreground="Blue"/>
		</Border>

		<!-- Кнопки действий -->
		<StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Создать воздуховод" Name="btnCreate"
                    Click="BtnCreate_Click" Margin="0,0,10,0"
                    Width="140" Height="35" Background="#FF008000" Foreground="White"/>
			<Button Content="Отмена" Name="btnCancel"
                    Click="BtnCancel_Click" Width="80" Height="35"/>
		</StackPanel>
	</Grid>
</Window>